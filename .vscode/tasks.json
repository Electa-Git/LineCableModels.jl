{
    "tasks": [
        {
            "label": "ðŸ§ª Run Tests",
            "presentation": {
                "panel": "new",
                "reveal": "always"
            },
            "command": "julia --project=. -e \"using Pkg; Pkg.test()\"",
            "problemMatcher": [],
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "ðŸ“š Build Documentation",
            "presentation": {
                "panel": "new",
                "showReuseMessage": false,
                "reveal": "always",
                "clear": true,
                "close": true
            },
            "command": "cd docs && julia --project=. -e \"using Pkg; Pkg.develop(PackageSpec(path=\\\"..\\\")); Pkg.instantiate()\" && julia --project=. make.jl",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ðŸ§¹ Clean Documentation",
            "presentation": {
                "panel": "new",
                "showReuseMessage": false,
                "reveal": "always",
                "clear": true,
                "close": true
            },
            "command": "rm -rf docs/build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ðŸ“‚ Open Julia config folder",
            "type": "process",
            "command": "xdg-open", // Use "open" on macOS, "explorer" on Windows
            "args": [
                "${env:HOME}/.julia/config/"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}